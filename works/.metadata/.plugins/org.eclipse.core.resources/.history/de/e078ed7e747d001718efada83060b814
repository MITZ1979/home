<script src="js/jquery-3.1.1.min.js"></script>
<script>


// 加载完
$(function () {
	$.get("stulist", "", function (res) {
		var innerHtml = "";
		$.each(res, function (k, v) {
			innerHtml = innerHtml + "<tr>"
				+ "<td><input type='checkbox' name='item' value='" + v.stuNo + "'></td>"
				+ "<td>" + v.stuNo + "</td>"
				+ "<td>" + v.stuName + "</td>"
				+ "<td>" + v.stuAge + "</td>"
				+ "<td>" + v.stuSex + "</td>"
				+ "<td>" + v.score + "</td>"
				+ "</tr>";
		});
		$(".main table").html(innerHtml);
	}, "json");

	$("#fuzzyQuery").click(function () {
		$.get("stulist", {condition: $("#condition").val()}, function (res) {
			var innerHtml = "";
			$.each(res, function (k, v) {
				innerHtml = innerHtml + "<tr>"
					+ "<td><input type='checkbox' name='item' value='" + v.stuNo + "'></td>"
					+ "<td>" + v.stuNo + "</td>"
					+ "<td>" + v.stuName + "</td>"
					+ "<td>" + v.stuAge + "</td>"
					+ "<td>" + v.stuSex + "</td>"
					+ "<td>" + v.score + "</td>"
					+ "</tr>";
			});
			$(".main table").html(innerHtml);
		}, "json");
	});
	
	$("#delbutton").click(function () {
		
		/* if(!window.confirm("你是否要删除？")) return;
		 */
		var items = $("input:checkbox:checked");
		$.each(items,function(){
			alert($(this).val());
		})
	/* 	$.get("studel", {"items":items.val()}, function () {
			alert("chengong");
			window.location.refresh();
		}); */
	});


});


</script>

</head>
